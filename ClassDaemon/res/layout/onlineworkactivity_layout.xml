<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="用户id" />

    <Button
        android:id="@+id/nepbutton4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#10000000"
        android:text="签到"
        android:textColor="#003e3e"
        android:textSize="60px" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBaseline="@+id/nepbutton4"
        android:layout_alignBottom="@+id/nepbutton4"
        android:layout_alignParentRight="true"
        android:background="#10000000"
        android:text="答题"
        android:textColor="#460046"
        android:textSize="60px" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentLeft="true"
        android:background="#10000000"
        android:text="提问"
        android:textColor="#006000"
        android:textSize="60px" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="54dp"
        android:background="#10000000"
        android:text="组队"
        android:textColor="#600030"
        android:textSize="60px" />

</RelativeLayout>
